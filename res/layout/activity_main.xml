<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_texture_wallpaper"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:onClick="champButtonPressed"
        android:text="@string/ChampionsButton"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button1"
        android:text="Jungle Timers"
        android:onClick="profileButtonPressed"
        android:textColor="#FFFFFF" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <RelativeLayout
            android:layout_width="536dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivFreeOne"
                android:layout_width="@dimen/free_week_image"
                android:layout_height="@dimen/free_week_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:tag="Not Done" />

            <ImageView
                android:id="@+id/ivFreeTwo"
                android:layout_width="@dimen/free_week_image"
                android:layout_height="@dimen/free_week_image"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@+id/ivFreeOne"
                android:tag="Not Done" />

            <ImageView
                android:id="@+id/ivFreeThree"
                android:layout_width="@dimen/free_week_image"
                android:layout_height="@dimen/free_week_image"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@+id/ivFreeTwo"
                android:tag="Not Done" />

            <ImageView
                android:id="@+id/ivFreeFour"
                android:layout_width="@dimen/free_week_image"
                android:layout_height="@dimen/free_week_image"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@+id/ivFreeThree"
                android:tag="Not Done" />

            <ImageView
                android:id="@+id/ivFreeFive"
                android:layout_width="@dimen/free_week_image"
                android:layout_height="@dimen/free_week_image"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@+id/ivFreeFour"
                android:tag="Not Done" />

            <ImageView
                android:id="@+id/ivFreeSix"
                android:layout_width="@dimen/free_week_image"
                android:layout_height="@dimen/free_week_image"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@id/ivFreeFive"
                android:tag="Not Done" />
            <ImageView
                android:id="@+id/ivFreeSeven"
                android:layout_width="@dimen/free_week_image"
                android:layout_height="@dimen/free_week_image"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@id/ivFreeSix"
                android:tag="Not Done" />
            <ImageView
                android:id="@+id/ivFreeEight"
                android:layout_width="@dimen/free_week_image"
                android:layout_height="@dimen/free_week_image"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@id/ivFreeSeven"
                android:tag="Not Done" />
            <ImageView
                android:id="@+id/ivFreeNine"
                android:layout_width="@dimen/free_week_image"
                android:layout_height="@dimen/free_week_image"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@id/ivFreeEight"
                android:tag="Not Done" />
            <ImageView
                android:id="@+id/ivFreeTen"
                android:layout_width="@dimen/free_week_image"
                android:layout_height="@dimen/free_week_image"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@id/ivFreeNine"
                android:tag="Not Done" />

        </RelativeLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvWeekNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/horizontalScrollView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/free_week_text" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvWeekNum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="Free Champion Rotation"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/free_week_text" />

</RelativeLayout>
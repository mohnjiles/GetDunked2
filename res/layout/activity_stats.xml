<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient"
    tools:context=".StatsActivity" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginTop="@dimen/stats_padding"
        android:text="Health Regen / 5"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginTop="@dimen/stats_padding"
        android:text="Mana"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textViewHP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView2"
        android:gravity="right"
        android:text="380 (+80)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textViewHPRegen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHP"
        android:layout_marginTop="@dimen/stats_padding"
        android:layout_toRightOf="@id/textView3"
        android:gravity="right"
        android:text="5.5 (+0.6)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView5"
        android:layout_below="@id/textView4"
        android:layout_marginTop="@dimen/stats_padding"
        android:text="Mana Regen / 5"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginTop="@dimen/stats_padding"
        android:text="Energy"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textViewMana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginTop="@dimen/stats_padding"
        android:layout_toRightOf="@id/textView4"
        android:gravity="right"
        android:text="230 (+50)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textViewManaRegen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginTop="@dimen/stats_padding"
        android:layout_toRightOf="@id/textView5"
        android:gravity="right"
        android:text="6.25 (+0.6)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_marginTop="@dimen/stats_padding"
        android:text="Energy Regen / 5"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textViewEnergy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginTop="@dimen/stats_padding"
        android:layout_toRightOf="@id/textView6"
        android:gravity="right"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textViewEnergyRegen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_marginTop="@dimen/stats_padding"
        android:layout_toRightOf="@id/textView7"
        android:gravity="right"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_marginTop="@dimen/stats_padding"
        android:text="Attack Damage"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textViewAD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewEnergyRegen"
        android:layout_marginTop="@dimen/stats_padding"
        android:layout_toRightOf="@id/textView8"
        android:gravity="right"
        android:text="50 (+3)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_marginTop="@dimen/stats_padding"
        android:text="Attack Speed"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textViewAtkSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAD"
        android:layout_marginTop="@dimen/stats_padding"
        android:layout_toRightOf="@id/textView9"
        android:gravity="right"
        android:text="0.668 (+2%)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView9"
        android:layout_marginTop="@dimen/stats_padding"
        android:text="Armor"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textViewRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_marginTop="@dimen/stats_padding"
        android:text="Range"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRange"
        android:layout_marginTop="@dimen/stats_padding"
        android:text="Movement Speed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textViewArmor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textViewArmor"
        android:layout_below="@id/textViewAtkSpeed"
        android:layout_marginTop="@dimen/stats_padding"
        android:layout_toRightOf="@id/textView10"
        android:gravity="right"
        android:text="11 (+3.5)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewArmor"
        android:layout_marginTop="@dimen/stats_padding"
        android:layout_toRightOf="@id/textViewRange"
        android:gravity="right"
        android:text="550"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

    <TextView
        android:id="@+id/textViewMoveSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView13"
        android:layout_marginTop="@dimen/stats_padding"
        android:layout_toRightOf="@id/textView16"
        android:gravity="right"
        android:text="330"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/stats_text" />

</RelativeLayout>
</ScrollView>